    .moment-timeline-block
        display flex
        flex-flow row nowrap
        padding 16px 9px 10px 9px
        border-bottom-one-px()

        .user-avator
            height 42px
            width 42px
            border-radius 5px
            background #0084ff
            margin-right 10px
        
        .moment-main
            flex 1
            flex-flow column nowrap

            .user-name
                line-height 20px
                font-size 16px 
                color: #576b95
                font-weight 500

            .text-content-wrapper
                padding: 4px 0

            .user-text-content
                line-height 20px
                font-size 15px
                color: #000000

                p.moment-text-line
                    min-height: 20px
            
            .user-text-content-hide
                overflow hidden
                text-overflow: ellipsis
                display: -webkit-box
                -webkit-line-clamp: 3
                -webkit-box-orient: vertical

            .moment-pic-wrapper
                margin: 10px 0

                .single-pic
                    max-height: 150px
                    max-width: 150px
                
                .square-pic
                    width: 32%
                    overflow hidden

                    &:after 
                        content: ''
                        display: block
                        margin-top: 100%
                
                .dummy-pic
                    background: #fff
  
                .one-line-pic
                    display flex
                    flex-flow: row nowrap
                    justify-content space-between

                .multi-line-margin
                    margin-bottom: 2%

            .content-control-button
                line-height 16px
                font-size 15px
                color #576b95
                margin: 10px 0
            
            .user-action-line
                margin-top 10px
                height 20px
                display flex
                flex-flow row nowrap
                position relative

                .mask
                    position fixed
                    top: 0
                    left 0
                    height 100%
                    width: 100%
                    background: rgba(0,0,0, .01)
                    z-index: 1

                .post-info
                    flex 1
                    line-height 20px
                    font-size 14px
                    color #c9c9c9

                    .other-info
                        padding-left 5px

                .enable-action-line-button
                    height 20px
                    line-height 20px
                    border-radius 3px
                    font-size 14px
                    width 33px
                    background #f7f7f7
                    color: #576b95
                    text-align center

                .action-button-bar-wrapper
                    position absolute
                    right 40px
                    bottom -10px
                    width: 180px
                    height 40px
                    overflow hidden
                    transition width .3s
                    z-index 2

                .action-button-bar
                    width: 180px
                    height 40px 
                    background: #4c5254
                    border-radius 5px
                    display flex
                    flex-flow row nowrap

                    .action-button
                        flex: 1
                        text-align: center
                        font-size: 15px
                        line-height: 40px
                        color: #fff
                        position: relative

                        &:after
                            content: ' '
                            background: #373d40
                            height 40px
                            width: 1px
                            display inline-block
                            position absolute
                            right 0
                            transform: scale(0.5)

                        &:last-child
                            &:after
                                background transparent



