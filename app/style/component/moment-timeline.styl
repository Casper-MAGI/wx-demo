    .moment-timeline-block
        display flex
        flex-flow row nowrap
        padding 16px 10px 10px 10px
        border-bottom-one-px()

        .user-avator
            height 42px
            width 42px
            border-radius 5px
            background #0084ff
            margin-right 10px
        
        .moment-main
            flex 1
            flex-flow column nowrap

            .user-name
                line-height 20px
                font-size 16px 
                color: #576b95
                font-weight 500

            .text-content-wrapper
                padding: 4px 0

            .user-text-content
                line-height 20px
                font-size 16px
                color: #000000
            
            .user-text-content-hide
                overflow hidden
                text-overflow: ellipsis
                display: -webkit-box
                -webkit-line-clamp: 3
                -webkit-box-orient: vertical
            

            .content-control-button
                line-height 16px
                font-size 15px
                color #576b95
                margin: 10px 0
            
            .user-action-line
                margin-top 10px
                height 20px
                display flex
                flex-flow row nowrap

                .post-info
                    flex 1
                    line-height 20px
                    font-size 14px
                    color #c9c9c9

                    .other-info
                        padding-left 5px

                .enable-action-line-button
                    height 20px
                    line-height 20px
                    border-radius 3px
                    font-size 14px
                    width 33px
                    background #f7f7f7
                    color: #576b95
                    text-align center