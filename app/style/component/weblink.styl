.webpage-link
    height 50px
    background #f3f3f5
    display flex
    flex-flow: row nowrap
    align-items center

    .webpage-icon
        height 40px
        width 40px
        background: #0084ff
        margin 6px
    .webpage-title
        flex: 1
        padding-right 6px
        line-height: 18px
        font-size: 12px
        color #000000
        overflow hidden
        text-overflow: ellipsis
        display: -webkit-box
        -webkit-line-clamp: 2
        -webkit-box-orient: vertical